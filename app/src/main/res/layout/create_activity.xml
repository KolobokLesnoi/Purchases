<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_crate"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="?colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" android:layout_weight="1"/>

    </android.support.design.widget.AppBarLayout>
    <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" android:layout_marginTop="20dp" android:textSize="18sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameTest" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
    />
    <TextView
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="18sp"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginTop="20dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/descriptionTest" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
    />
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp" app:srcCompat="@android:drawable/ic_menu_gallery"
            android:id="@+id/photoTest" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>

</LinearLayout>